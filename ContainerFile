ARG FEDORA_MAJOR_VERSION="${FEDORA_MAJOR_VERSION:-40}"

## Begin with a Kinoite Base Image
FROM quay.io/fedora/fedora-kinoite:${FEDORA_MAJOR_VERSION}

## Add and enable RPM Fusion Repos
RUN rpm-ostree install https://mirrors.rpmfusion.org/free/fedora/rpmfusion-free-release-$(rpm -E %fedora).noarch.rpm https://mirrors.rpmfusion.org/nonfree/fedora/rpmfusion-nonfree-release-$(rpm -E %fedora).noarch.rpm
RUN sed -i '0,/enabled=0/{s/enabled=0/enabled=1\npriority=110/}' /etc/yum.repos.d/rpmfusion-*-updates-testing.repo

COPY etc /etc
COPY usr /usr
COPY azurite-first-setup /usr/bin

RUN mkdir /usr/local/bin
RUN mkdir /usr/local/bin/overrides

#Clean up packages to use the ones I want. Set automated staged updates.
RUN rpm-ostree override remove \
        firefox \
        firefox-langpacks \
        plasma-discover-rpm-ostree \
        mesa-va-drivers && \
    rpm-ostree install \
        distrobox \
        swtpm \
        qemu-kvm \
        libvirt \
        virt-manager \
        libheif-freeworld \
        libheif-tools \
        kf6-kimageformats \
        qt6-qtimageformats \
        gwenview \
        kate \
        fish \
        pipewire-codec-aptx \
        icoutils \
        kcron \
        kio-admin \
        ksshaskpass \
        mesa-va-drivers-freeworld.x86_64 \
        libva-utils && \
    sed -i 's/#AutomaticUpdatePolicy.*/AutomaticUpdatePolicy=stage/' /etc/rpm-ostreed.conf && \
    systemctl enable rpm-ostreed-automatic.timer && \
    systemctl enable swtpm-workaround && \
    rm -rf \
        /tmp/* \
        /var/*

RUN ostree container commit